@page
@model tttServer.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">

    <h1>Index</h1>

    <!--<p>
        <a asp-page="Create">Create New</a>
    </p> -->
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TblPlayers[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblPlayers[0].Last_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblPlayers[0].Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TblPlayers[0].Num_of_games)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TblPlayers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Num_of_games)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
