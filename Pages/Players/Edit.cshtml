@page
@model tttServer.Pages.Players.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit player details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblPlayers.Id" />
            <div class="form-group">
                <label asp-for="TblPlayers.Name" class="control-label"></label>
                <input asp-for="TblPlayers.Name" class="form-control" />
                <span asp-validation-for="TblPlayers.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblPlayers.Last_name" class="control-label"></label>
                <input asp-for="TblPlayers.Last_name" class="form-control" />
                <span asp-validation-for="TblPlayers.Last_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblPlayers.Username" class="control-label"></label>
                <input asp-for="TblPlayers.Username" class="form-control" />
                <span asp-validation-for="TblPlayers.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblPlayers.Password" class="control-label"></label>
                <input asp-for="TblPlayers.Password" class="form-control" />
                <span asp-validation-for="TblPlayers.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblPlayers.ConfirmPassword" class="control-label"></label>
                <input asp-for="TblPlayers.ConfirmPassword" class="form-control" />
                <span asp-validation-for="TblPlayers.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label hidden asp-for="TblPlayers.Num_of_games" class="control-label" ></label>
                <input asp-for="TblPlayers.Num_of_games" class="form-control" type="hidden"/>
                <span asp-validation-for="TblPlayers.Num_of_games" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
